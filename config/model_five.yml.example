# Configuration file for Model Five

# Deployment environments
environments:
  dev:
    # SSH hostname
    host: dev.myhost.com
    # SSH username
    user: myuser
    # Absolute path to SSH keyfile
    key: /path/to/mykey.pem
    # Path to deployed application
    path: /opt/myapp
    # Slack user IDs allowed to deploy to this environment
    allowed_users:
      - XXXXXXXXX
    # Slack channel IDs allowed to deploy from
    allowed_channels:
      - XXXXXXXXX

  qas:
    # SSH hostname
    host: qas.myhost.com
    # SSH username
